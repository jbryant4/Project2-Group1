            {{/each}}
        </div>
    </div>



    <div class="col col-md-4">
        <h3>Top of the Pops!</h3>
        <div class="listCards">
            {{#each lists as |list|}}
            {{> list-info list}}
            {{/each}}
        </div>

    </div>

</div>